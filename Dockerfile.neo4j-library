FROM public.ecr.aws/lambda/python:3.11

# Copy requirements for library installations
COPY requirements-neo4j-library.txt ${LAMBDA_TASK_ROOT}/

# Install heavy dependencies with pre-compiled wheels
RUN pip install --no-cache-dir --only-binary=all -r requirements-neo4j-library.txt

# Copy the library handler
COPY microservices/neo4j-library-handler.py ${LAMBDA_TASK_ROOT}/

# Set the CMD to your handler
CMD ["neo4j-library-handler.lambda_handler"]
