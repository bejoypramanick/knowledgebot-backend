# Dockerfile.docling
# Document processing runtime: Python 3.12 Lambda base with Docling dependencies
FROM public.ecr.aws/lambda/python:3.12

LABEL maintainer="KnowledgeBot Team"
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8
ENV PIP_DISABLE_PIP_VERSION_CHECK=1
ENV PIP_NO_CACHE_DIR=1

# Install minimal system dependencies for Docling
# Docling handles most processing through Python packages (pypdfium2, EasyOCR, etc.)
RUN microdnf update -y && \
    microdnf install -y \
    gcc \
    gcc-c++ \
    make \
    libffi-devel \
    openssl-devel \
    zlib-devel \
    bzip2-devel \
    readline-devel \
    sqlite-devel \
    xz-devel \
    expat-devel \
    gdbm-devel \
    ncurses-devel \
    python3-devel \
    && microdnf clean all

# Upgrade pip and install core dependencies
RUN python -m pip install --upgrade pip setuptools wheel

# Install core Python packages
RUN python -m pip install --no-cache-dir \
    boto3>=1.34.0 \
    botocore>=1.34.0 \
    openai>=1.12.0 \
    openai-agents>=0.1.0 \
    pinecone-client>=3.1.0 \
    neo4j>=5.24.0 \
    httpx>=0.25.0 \
    orjson>=3.9.0 \
    structlog>=23.2.0 \
    pydantic>=2.5.0 \
    typing-extensions>=4.9.0

# Install Docling with CPU-only PyTorch for Lambda environment
# Using the extra-index-url method as recommended in Docling docs for CPU-only
RUN python -m pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cpu \
    torch>=2.1.0 \
    && python -m pip install --no-cache-dir \
    docling>=2.25.0

# Copy application code
COPY agent-toolkit/ ${LAMBDA_TASK_ROOT}/

# Set the CMD to your document processing handler
CMD ["lambda_handlers.lambda_handler_knowledge_document_ingestion"]
