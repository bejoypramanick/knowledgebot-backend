{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowECRLogin",
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowECRRepositoryAccess",
            "Effect": "Allow",
            "Action": [
                "ecr:DescribeRepositories",
                "ecr:DescribeImages",
                "ecr:BatchGetImage",
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchCheckLayerAvailability",
                "ecr:InitiateLayerUpload",
                "ecr:UploadLayerPart",
                "ecr:CompleteLayerUpload",
                "ecr:PutImage",
                "ecr:BatchDeleteImage",
                "ecr:TagResource",
                "ecr:UntagResource",
                "ecr:ListTagsForResource"
            ],
            "Resource": [
                "arn:aws:ecr:ap-south-1:090163643302:repository/chatbot-*",
                "arn:aws:ecr:ap-south-1:090163643302:repository/insurance-ai-rag-*"
            ]
        }
    ]
}
